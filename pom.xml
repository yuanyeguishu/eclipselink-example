<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <!-- http://maven.apache.org/ref/3.3.1/maven-model/maven.html -->
    <modelVersion>4.0.0</modelVersion>
    <!--
    <parent>
        <groupId />
        <artifactId />
        <version />
        <relativePath />
    </parent>
    -->
    <groupId>com.github.namioka.eclipselink-example</groupId>
    <artifactId>xyz</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>${project.artifactId}</name>
    <organization/>
    <prerequisites>
        <maven>${prerequisites.maven}</maven>
    </prerequisites>
    <scm>
        <developerConnection>scm:git:git@github.com:namioka/eclipselink-example.git</developerConnection>
        <tag>HEAD</tag>
    </scm>
    <issueManagement/>
    <ciManagement/>
    <distributionManagement/>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <prerequisites.maven>3.3.1</prerequisites.maven>
    </properties>
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.projectlombok</groupId>
                <artifactId>lombok</artifactId>
                <version>1.16.6</version>
                <scope>provided</scope>
            </dependency>
            <dependency>
                <groupId>org.slf4j</groupId>
                <artifactId>slf4j-api</artifactId>
                <version>1.7.12</version>
            </dependency>
            <dependency>
                <groupId>ch.qos.logback</groupId>
                <artifactId>logback-classic</artifactId>
                <version>1.1.3</version>
            </dependency>
            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>4.12</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>org.hamcrest</groupId>
                <artifactId>hamcrest-all</artifactId>
                <version>1.3</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>org.mockito</groupId>
                <artifactId>mockito-core</artifactId>
                <version>1.10.19</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>com.github.namioka.eclipselink-example</groupId>
                <artifactId>xyz-domain</artifactId>
                <version>1.0.0-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>com.github.namioka.eclipselink-example</groupId>
                <artifactId>xyz-application</artifactId>
                <version>1.0.0-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>com.github.namioka.eclipselink-example</groupId>
                <artifactId>xyz-persistence</artifactId>
                <version>1.0.0-SNAPSHOT</version>
                <scope>runtime</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <build>
        <pluginManagement>
            <plugins>
                <!--
                    #TODO Specify plugin version
                    [WARNING] The following plugins do not have their version specified:
                    [WARNING]   maven-clean-plugin ........................ (from super-pom) 2.6.1
                    [WARNING]   maven-compiler-plugin ....................... (from super-pom) 3.2
                -->
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>3.2</version>
                    <configuration>
                        <compilerArgs>
                            <arg>-Xlint</arg>
                        </compilerArgs>
                    </configuration>
                </plugin>
                <!--
                    [WARNING]   maven-deploy-plugin ....................... (from super-pom) 2.8.2
                    [WARNING]   maven-install-plugin ...................... (from super-pom) 2.5.2
                    [WARNING]   maven-jar-plugin ............................ (from super-pom) 2.5
                    [WARNING]   maven-resources-plugin ...................... (from super-pom) 2.7
                    [WARNING]   maven-site-plugin ........................... (from super-pom) 3.4
                    [WARNING]   maven-surefire-plugin .................... (from super-pom) 2.18.1
                -->
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-release-plugin</artifactId>
                    <version>2.5.1</version>
                    <configuration>
                        <autoVersionSubmodules>true</autoVersionSubmodules>
                        <tagNameFormat>@{project.version}</tagNameFormat>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>versions-maven-plugin</artifactId>
                    <version>2.2</version>
                </plugin>
                <plugin>
                    <groupId>org.bsc.maven</groupId>
                    <artifactId>maven-processor-plugin</artifactId>
                    <version>2.2.4</version>
                    <executions>
                        <execution>
                            <id>process</id>
                            <goals>
                                <goal>process</goal>
                            </goals>
                            <phase>generate-sources</phase>
                            <configuration>
                                <processors>
                                    <processor>xxxxx.yyyyy.zzzzz.apt.SampleProcessor</processor>
                                </processors>
                            </configuration>
                        </execution>
                    </executions>
                    <dependencies>
                        <dependency>
                            <groupId>com.github.namioka.eclipselink-example</groupId>
                            <artifactId>xyz-apt</artifactId>
                            <version>1.0.0-SNAPSHOT</version>
                        </dependency>
                    </dependencies>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
    <!-- Deprecated. Now ignored by Maven.
    <reports />
    -->
    <reporting/>
    <modules>
        <module>xyz-application</module>
        <module>xyz-domain</module>
        <module>xyz-infrastructures</module>
        <module>xyz-interfaces</module>
        <module>xyz-apt</module>
    </modules>
</project>
